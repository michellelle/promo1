<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center">Create Your Profile</h1>
        <p class="text-center">Update your personal info...</p>
        <div class="well">
            <%= form_for @profile, url: user_profile_path do |f| %>
                <div class="form-group">
                    <%= f.label :first_name %>
                    <%= f.text_field :first_name, class: 'form-control' %>
                </div>
                
                <div class="form-group">
                    <%= f.label :last_name %>
                    <%= f.text_field :last_name, class: 'form-control' %>
                </div>
                
                <div class="form-group">
                    <%= f.label :job_title %>
                    <%= f.select :job_title, ['Independent Buyer', 'Company Representative', 'Store Owner'], {}, class: 'form-control' %>
                </div>
                
                <div class="form-group">
                    <%= f.label :contact_email %>
                    <%= f.text_field :contact_email, class: 'form-control' %>
                </div>
                
                <div class="form-group">
                    <%= f.label :description %>
                    <%= f.text_field :description, class: 'form-control' %>
                </div>
                
                <div class="form-group">
                    <%= f.submit "Update Profile", class: 'btn btn-default' %>
                </div>
            <% end %>
        </div>
    </div>
</div>