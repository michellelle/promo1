<div class="flex one three-1000">
    <% @products.each do |product| %>
        <article class="card">
            <img src="<%= product.picture %>">
            <footer>
                <h3><%= product.title %></h3>
                <%= link_to "Buy", product_path(product), class: "button" %>
            </footer>
        </article>
    <% end %>
</div>